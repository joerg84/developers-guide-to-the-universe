{  
  "id":"neo4j",
  "cpus":2,
  "mem":8000,
  "instances":1,
  "disk": 8000,
  "container":{  
    "type":"DOCKER",
    "docker":{  
      "image":"neo4j/neo4j-experimental:3.1.0-RC1",
      "network":"BRIDGE",
      "forcePullImage":true,
      "portMappings":[
        {
           "hostPort":0,
           "containerPort":7474,
           "name":"http",
           "protocol":"tcp",
            "labels":{
              "VIP_0":"7.4.7.4:7474"
            }
        },
        {
           "hostPort":0,
           "containerPort":7473,
           "name":"https",
           "protocol":"tcp",
            "labels":{
              "VIP_0":"7.4.7.4:7473"
            }
        },
        {
           "hostPort":0,
           "name":"bolt",
           "containerPort":7687,
           "protocol":"tcp",
            "labels":{
              "VIP_0":"7.4.7.4:7687"
            }
        }
      ],
      "volumes":[  
        {  
          "containerPath":"data",
          "mode":"RW",
          "persistent":{  
            "type":"root",
            "size":8000
          }
        },
        {  
          "containerPath":"/data",
          "hostPath":"data",
          "mode":"RW"
        }
      ]
    }
  },
  "env":{  
    "NEO4J_AUTH":"neo4j/dcos",
    "NEO4J_dbms_memory_heap_maxSize":"6000M",
    "NEO4J_dbms_connectors_defaultAdvertisedAddress":"7.4.7.4"
  },
  "healthChecks":[
    {
      "http": { "path": "/", "scheme": "HTTP", "endpoint": "http" },
      "timeoutSeconds":10,
      "gracePeriodSeconds":240,
      "intervalSeconds":10,
      "maxConsecutiveFailures":10
    }
  ]
}
